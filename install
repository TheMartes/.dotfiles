#/bin/bash

RED="\033[0;31m"
NC="\033[0m"

while true; do
    printf '%s\n' '---------------------------------------------------------------------'
    printf "${RED}This will delete all your config files within GTK Eco System \n"
    printf "${RED}and replace them with files from this repository.${NC}\n"
    printf '%s\n' '---------------------------------------------------------------------'
    printf "\n"
    read -p "Do you want to continue? " yn
    case $yn in
        [Yy]* ) ./scripts/install; break;;
        [Nn]* ) exit;;
        * ) echo "Please answer yes or no.";;
    esac
done

